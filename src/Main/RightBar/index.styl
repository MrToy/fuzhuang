@keyframes LeftFadeIn 
	0%
		opacity:0;transform:translateX(-50%)
	100%
		opacity:1;transform:translateX(0)	
		
.box
	position:fixed;height:100%;right:0;top:0;width:300px;margin-right:-265px;transition:all 0.3s
	.info
		width:265px;background-color:#666;height:100%;position:absolute;left:35px
	.menu
		width:35px;background-color: #212426;height:100%;position:absolute;left:0
		&>*
			position:absolute;width:100%
		.center
			top:50%;transform:translateY(-70%)
		.foot
			bottom:0
		.top
			top:0
		.arrow
			display:none
		.list
			width:100%;text-align:center;cursor:pointer;padding:5px 0;font-size:21px;color:#aaa;margin-top:15px;position:relative
			&:hover
				background-color:#C81624;color:#fff
				.cart 
					border-color:transparent
				.addon
					display:block
			.text
				font-size:12px;margin:4px auto;width:20px
			.cart
				width:25px;text-align:center;margin:0 auto;border-top: 1px solid #888;border-bottom: 1px solid #888;padding:10px 0;
			.addon
				display:none;position:absolute;right:35px;top:0;width:100px;height:35px;background:#666;font-size:15px;color:#fff;line-height:35px;animation:LeftFadeIn 0.3s
				&:after
					position:absolute;top:10px;right:-15px;border:solid 8px;border-color:transparent transparent transparent #666;content:" "
.box_active
	margin-right:0px
	.menu
		.arrow
			display:block	